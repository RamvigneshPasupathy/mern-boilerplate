{
  "appenders": [{
    "type": "console",
    "layout": {
      "type": "pattern",
      "pattern": "[%d{DATE}] %[[%p]%] - %m"
    }
  }, {
    "type": "dateFile",
    "filename": "app-logs/app.log",
    "pattern": "-yyyy-MM-dd",
    "layout": {
      "type": "pattern",
      "pattern": "[%d{DATE}] [%p] - %m"
    },
    "maxLogSize": 1024,
    "backups": 3
  }]
}
